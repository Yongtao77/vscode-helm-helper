{
	"name": "vscode-helm-helper",
	"displayName": "Helm Helper",
	"description": "Helmer Helper",
	"version": "0.0.1",
	"publisher": "yongtao",
	"license": "MIT",
	"repository": {
		"url": "https://github.com/yougtao/vscode-helm-helper"
	},
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:helm-helper.helloWorld",
		"onLanguage:helm-template"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "helm-helper.helloWorld",
				"title": "Hello World"
			}
		],
		"languages": [
			{
				"id": "helm-template",
				"aliases": [
					"Helm",
					"Helm Template"
				],
				"filenamePatterns": [
					"**/templates/*.{yaml,yml}",
					"**/templates/*.tpl"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "helm-template",
				"scopeName": "source.helm-template",
				"path": "./syntaxes/helm-template.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"@types/lodash": "^4.14.113",
		"@types/yamljs": "^0.2.30",
		"node-yaml-parser": "^0.0.9",
		"yamljs": "^0.3.0"
	},
	"devDependencies": {
		"@types/vscode": "^1.53.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0",
		"eslint-config-standard": "^16.0.3",
		"eslint-plugin-import": "^2.23.3",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^5.1.0",
		"eslint-plugin-standard": "^5.0.0"
	}
}